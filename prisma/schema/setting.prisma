model AdminSetting {
  id String @id @default(uuid())

  pushNotificationsEnabled Boolean @default(true)
  adminLoginTFAEnabled     Boolean @default(false)
  showSearchBarInApp       Boolean @default(true)
  shouldValidateLocation   Boolean @default(false)
  shouldValidateTime       Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("admin_settings")
}
